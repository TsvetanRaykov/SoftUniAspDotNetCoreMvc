@{
    Layout = "_Layout";
    var sideMenuSelected = ViewData["sidebarMenu"] as string;
}

<section class="vxp-section ftco-no-pb ftco-services mb-3" id="practice-section">
    <div class="container-fluid">

        <div class="row no-gutters">
            <div class="col-md-5 col-lg-2 ftco-animate py-4 nav-link-wrap">
                <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                    <a asp-area="Administration" asp-controller="Dashboard" asp-action="Index" class="nav-link px-4 py-1 @(sideMenuSelected=="Users" ? "active" : string.Empty)" role="tab"><span class="mr-3"></span> Users</a>
                    <a asp-area="Administration" asp-controller="Dashboard" asp-action="Settings" class="nav-link px-4 py-1 @(sideMenuSelected=="Settings" ? "active" : string.Empty)" role="tab"><span class="mr-3"></span> Settings</a>
                </div>
            </div>

            <div class="col-md-7 col-lg-10 ftco-animate p-4 p-md-5 ">

                <div class="tab-content pl-4" id="v-pills-tabContent">

                    <div class="tab-pane fade py-0 py-lg-5 show active" id="v-pills-1" role="tabpanel" aria-labelledby="v-pills-1-tab">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>

@section Scripts {
    @RenderSection("Scripts", false);
}

