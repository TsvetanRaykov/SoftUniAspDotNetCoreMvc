        <div class="w-25 bg-light d-flex flex-column p-1 border rounded">
            <h6 class="bg-primary text-white p-1 rounded">Personal data</h6>
            <div class="w-100">
                <label asp-for="@Model.RoleId" class="vxp-form-control-label"></label>
