@page
@model LoginModel
@{
    Layout = "_LayoutGuest";
    ViewData["Title"] = "Log in";
}

<div class="w-50 ftco-animate pr-5" data-scrollax=" properties: { translateY: '70%' }">
    <div class="h-20 mb-3"></div>

    <form id="account" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <input asp-for="Input.Email" class="form-control" placeholder="Email" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Input.Password" class="form-control" placeholder="Password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="checkbox text-light">
                <label asp-for="Input.RememberMe">
                    <input asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
        </div>
        <br />
        <div class="form-group">
            <button type="submit" class="w-33 btn btn-primary py-3 px-4" id="button-login">Log in</button>
        </div>
        <div class="form-group">
            <p>
                <a id="forgot-password" class="text-light" asp-page="./ForgotPassword">Forgot your password?</a>
            </p>
        </div>
    </form>
</div>
<div class="w-50" data-scrollax="properties: { translateY: '70%' }">
    <partial name="_RequestAccessPartial" />
</div>