@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="w-50 pr-5 ftco-animate">
    <form method="post">
        <div class="form-group mt-3">
            <input asp-for="Input.Email" class="form-control" placeholder="Email" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <button type="submit" class="w-33 btn btn-primary py-3 px-4">Submit</button>
    </form>
</div>
<div class="w-50" data-scrollax="properties: { translateY: '70%' }">
    <partial name="_RequestAccessPartial" />
</div>